<div class="row">
  <div class="col-md-8">
    <h1>{{title}}</h1>
    <div class="text">{{{text}}}</div>
  </div>
  <div class="col-md-4">
    <dl>
      {{#if connectedEvent}}
        <dt>Related Event</dt>
          <dd><a href="#events/{{connectedEvent._id}}">{{connectedEvent.title}}</a></dd>
      {{/if}}

      {{#if homepage}}
        <dt>Homepage</dt>
          <dd><a target="_blank" href="{{homepage}}">{{homepage}}</a></dd>
      {{/if}}

      {{#if downloadUrl}}
        <dt>Download URL</dt>
          <dd><a target="_blank" href="{{downloadUrl}}">{{downloadUrl}}</a></dd>
      {{/if}}

      {{#if datasets}}
        <dt>Datasets</dt>
          <dd>
            <ul class="datasets">
              {{#each datasets}}
                <li><a target="_blank" href="{{this}}">{{this}}</a></li>
              {{/each}}
            </ul>
          </dd>
      {{/if}}
    </dl>
  </div>
</div>
